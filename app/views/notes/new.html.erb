<h3>Write your note</h3>

<%= form_with model: @note do |f| %>
  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 25, rows: 8 %>
  </div>
  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.submit "Create" %>
  </div> 
<% end %>  
